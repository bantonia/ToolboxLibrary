    static char *convertHex2(int, char *, int *);
    static char *convertHex4(int, char *, int *);
    static char *convertHex6(int, char *, int *);
    static char *convertHex8(int, char *, int *);
    static char *convertHex(int, char *, int *);
  private:
};

#endif
