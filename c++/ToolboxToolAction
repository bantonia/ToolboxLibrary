#include "ToolboxToolAction.h"

ToolboxToolAction::ToolboxToolAction() : ToolboxGadget() {}

ToolboxToolAction::ToolboxToolAction(ObjectId windowId, ComponentId gadgetId) : ToolboxGadget(windowId, gadgetId)  {}

ToolboxToolAction::ToolboxToolAction(ObjectId windowId, ComponentId gadgetId, unsigned int flags) : ToolboxGadget(windowId, gadgetId, flags) {}

ToolboxToolAction& ToolboxToolAction::setIdent(char *ident) {
  _kernel_swi_regs regs;
  regs.r[4] = (int) ident;
  this->gadgetMethod(ToolAction_SetIdent, &regs);
  return *this;
}

ToolboxToolAction& ToolboxToolAction::getIdent(char *ident, int size, int *nchar) {
  _kernel_swi_regs regs;
  regs.r[4] = (int) ident;
  regs.r[5] = size;
  this->gadgetMethod(ToolAction_GetIdent, &regs);
  *nchar = regs.r[0];
  return *this;
}

ToolboxToolAction& ToolboxToolAction::setAction(unsigned int select, unsigned int adjust) {
  _kernel_swi_regs regs;
  regs.r[4] = (int) select;
  regs.r[5] = (int) adjust;
  this->gadgetMethod(ToolAction_SetAction, &regs);
  return *this;
}

ToolboxToolAction& ToolboxToolAction::setClickShow(ObjectId selectObj, ObjectId adjustObj) {
  _kernel_swi_regs regs;
  regs.r[4] = (int) selectObj;
  regs.r[5] = (int) adjustObj;
  this->gadgetMethod(ToolAction_SetClickShow, &regs);
  return *this;
}

ToolboxToolAction& ToolboxToolAction::getClickShow(ObjectId *selectObj, ObjectId *adjustObj) {
  _kernel_swi_regs regs;
  this->gadgetMethod(ToolAction_GetClickShow, &regs);
  selectObj = (ObjectId *) regs.r[0];
  adjustObj = (ObjectId *) regs.r[1];
  return *this;
}

ToolboxToolAction& ToolboxToolAction::setState(unsigned int state) {
  _kernel_swi_regs regs;
  regs.r[4] = (int) state;
  this->gadgetMethod(ToolAction_SetState, &regs);
  return *this;
}

unsigned int ToolboxToolAction::getState() {
  _kernel_swi_regs regs;
  this->gadgetMethod(ToolAction_GetState, &regs);
  return regs.r[0];
}

ToolboxToolAction& ToolboxToolAction::setPressed(unsigned int pressed) {
  _kernel_swi_regs regs;
  regs.r[4] = (int) pressed;
  this->gadgetMethod(ToolAction_SetPressed, &regs);
  return *this;
}

unsigned int ToolboxToolAction::getPressed() {
  _kernel_swi_regs regs;
  this->gadgetMethod(ToolAction_GetPressed, &regs);
  return regs.r[0];
}
